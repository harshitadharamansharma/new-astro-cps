---
import { Image } from "astro:assets";

import CPSLogoWhite from "../assets/lab-Identity/logo_cypsi_white.png";
import { SITE_TITLE } from "../consts";
import FooterColumns from "./Footer/FooterColumns.astro";
import FooterCopyright from "./Footer/FooterCopyright.astro";
const today = new Date().getFullYear();

const urlList1 = [
  { text: 'University of Delhi', href: 'https://www.du.ac.in/' },
  { text: 'Ministry of Education', href: 'https://www.education.gov.in/' },  // Font Awesome icon
  { text: 'Project Samarth', href: 'https://samarth.edu.in/' },  // Font Awesome icon
  { text: 'National Portal of India', href: 'https://www.india.gov.in/'},  // Image icon
  { text: 'Internship @ IIC', href: 'https://cps.iic.ac.in/'},  // Image icon
];


const urlList2 = [ 
  { text: 'CPS Framework – Volume 1', href: 'https://nvlpubs.nist.gov/nistpubs/SpecialPublications/NIST.SP.1500-201.pdf' },
  { text: 'CPS Framework – Volume 2', href: 'https://nvlpubs.nist.gov/nistpubs/SpecialPublications/NIST.SP.1500-202.pdf' },  // Font Awesome icon
  { text: 'Resources for AI', href: 'https://storage.googleapis.com/deepmind-media/research/New_AtHomeWithAI%20resources.pdf' },  // Image icon
];


const urlSocials= [
	{ text: 'LinkedIn', href: 'https://www.linkedin.com/company/cypsilab/', faIcon: 'fa-brands fa-linkedin' },
	{ text: 'YouTube', href: 'https://www.youtube.com/@cypsilab', faIcon: 'fa-brands fa-youtube' },
  	{ text: 'GitHub', href: 'https://www.github.com', faIcon: 'fa-brands fa-github' },  // Font Awesome icon
];

const urlSocials2= [
  { text: 'YouTube', href: 'https://www.google.com', svgIcon: 'https://example.com/google-icon.svg', iconAltText: 'Google Icon' },
  { text: 'LinkedIn ', href: 'https://astro.build', imgIcon: 'https://example.com/astro-icon.png', iconAltText: 'Astro Icon' },  // Image icon
