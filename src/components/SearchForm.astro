<form id="search-form" class="flex m-4 items-center" action="/blogs/search">
    <label for="search-input" class="sr-only">Search</label>
    <div class="relative w-[40%]">            
      <input
        type="text"
        id="query"
        name="query"
        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-[var(--accent-focus)] focus:border-[var(--accent-3-hover)] block w-full p-2.5"
        placeholder="Search articles..."
        required
      />
    </div>
    <button
      type="submit"
      class="p-2.5 ms-2 text-sm font-medium text-white bg-[var(--accent)] rounded-lg border border-[var(--accent-2)] hover:bg-[var(--accent-2)] focus:ring-4 focus:outline-none focus:ring-[var(--accent-focus)]"
    >
      <svg
        class="w-4 h-4"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 20 20"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
        />
      </svg>
      <span class="sr-only">Search</span>
    </button>
  </form>