---
interface Props {
    NewsList: {
        date?: string;
        href?: string;
        text?: string;
    }[];
}

const {NewsList=[]}: Props = Astro.props
---
<div class=" mt-3 h-[480px] overflow-auto">

    {NewsList.length > 0 && (
        NewsList.map((item) => (

        <div class="flex items-start  pb-3">
            <div class=" flex justify-between item-center mr-3 min-h-28 w-full my-1 bg-slate-200 py-4 px-4 rounded-md group">	
                <div class="text-sm">
                    <p class="text-gray-600 text-xs my-1">{item.date}</p>
                    <a href={item.href} target="_blank" class="text-gray-900 text-md font-medium group-hover:text-[var(--accent)] transition-colors duration-300 leading-none"> {item.text} </a>
                </div>
                {/* <i class="text-3xl fa-solid fa-square-arrow-up-right group-hover:text-[var(--accent)] transition-colors duration-300 "></i> */}
                
            </div>
        </div>
        
        ))
        )}
    
    </div>