---
const { currentPage, totalPages, disablePrevious, disableNext } = Astro.props;

interface Props {
  currentPage: number;
  totalPages: number;
  disablePrevious: boolean;
  disableNext: boolean;
}
---
<div class="flex justify-between mt-10">
  <a href={'/blogs?page=' + (currentPage - 1)} class={
    disablePrevious ? "font-semibold inline-block bg-gray-100 px-3 py-2 text-gray-400 rounded-lg pointer-events-none" : "font-semibold inline-block bg-[var(--accent-focus)] px-3 py-2 hover:[var(--accent)] hover:text-white rounded-lg"
  }>
    <i class="fa-solid fa-arrow-left"></i>
    Previous 
  </a>
  <a href={'/blogs?page=' + (currentPage + 1)} 
    class={
      disableNext ? "font-semibold inline-block bg-gray-100 px-3 py-2 text-gray-400 rounded-lg pointer-events-none" : "font-semibold inline-block bg-[var(--accent-focus)] px-3 py-2 hover[var(--accent)] hover:text-white rounded-lg"
    }>
    Next  <i class="fa-solid fa-arrow-right"></i>

  </a>
</div>