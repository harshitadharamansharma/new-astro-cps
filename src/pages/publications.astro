---
import Layout from "../layouts/BlogPost.astro";
import PublicationsReact from '../components/Publications/Publications.jsx';
---

<Layout
	title="Publications"
	description="Lorem ipsum dolor sit amet"
	pubDate={new Date("August 08 2021")}
	heroImage="/blog-placeholder-about.jpg">

	<PublicationsReact client:only />
</Layout>



<style>
	body {
		font-family: Arial, sans-serif;
		/* margin: 20px; */
	}

	table {
		width: 100%;
		margin: 20px 0;
	}

	.filter-container {
		display: flex;
		flex-wrap: wrap;
		gap: 15px;
		margin-bottom: 20px;
	}

	.filter-container label {
		flex: 1;
		font-weight: bold;
		margin: 0;
	}

	.filter-container input[type="text"],
	.filter-container select {
		flex: 1;
		padding: 8px;
		border: 1px solid #ccc;
		border-radius: 4px;
		width: 100%;
		box-sizing: border-box;
	}

	.filter-container .filter-item {
		flex: 1;
		min-width: 150px;
	}

	.filter-container input[type="text"]:focus,
	.filter-container select:focus {
		outline: none;
		border-color: #007bff;
		box-shadow: 0 0 3px rgba(0, 123, 255, 0.5);
	}

	.highlight {
		background-color: yellow;
		font-weight: bold;
	}

	.select2-container {
		z-index: 10000;
	}

	.select2-dropdown {
		z-index: 10001;
		box-sizing: border-box;
	}

	.select2-selection {
		min-height: 38px;
	}

	.select2-container--open .select2-dropdown {
		position: absolute;
		top: 100%;
		left: 0;
		width: 100%;
		margin-top: 4px;
		border-radius: 4px;
		border: 1px solid #ccc;
		background-color: #fff;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
	}

	.select2-container--default .select2-selection--multiple .select2-selection__choice {
		background-color: #007bff;
		border-color: #007bff;
		color: #fff;
		padding: 3px 10px;
		margin-top: 2px;
		margin-right: 2px;
		border-radius: 4px;
		font-size: 14px;
	}
</style>
