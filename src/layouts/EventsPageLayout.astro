---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import { Image } from "astro:assets";
import Prose from "../components/Prose.astro";

var { title, description, heroImage } = Astro.props;

import TitleHeader from "../components/TitleHeader/TitleHeader.astro";
---

<html lang="en">
	<head>
		<BaseHead
			title={title}
			description={description}
		/>
		<!-- FullCalendar CSS -->
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/main.min.css" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/daygrid.min.css" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/timegrid.min.css" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/list.min.css" /> <!-- Added List View CSS -->
		<!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/year.min.css" /> Add Year View CSS -->
	</head>

	<body class="bg-white text-gray-800">
		<Header />
		<main class="w-full m-0">
			<article>
				<div class="w-full">
					{
						heroImage && (
							<TitleHeader title={title} bgImg={heroImage} />
						)
					}
				</div>
				<Prose>
					<slot />
				</Prose>
			</article>

			<Footer />
		</main>
		
		<!-- FullCalendar JavaScript -->
		<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/main.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/daygrid.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/timegrid.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/list.min.js"></script> <!-- Added List View JS -->
		<!-- <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/5.10.1/year.min.js"></script> Add Year View JS -->
	</body>
</html>